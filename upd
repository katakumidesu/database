ALTER TABLE users
ADD COLUMN username VARCHAR(99) UNIQUE AFTER user_id,
ADD COLUMN gender ENUM('Male','Female','Other') DEFAULT 'Other' AFTER phone,
ADD COLUMN birthdate DATE AFTER gender,
ADD COLUMN profile_image VARCHAR(255) DEFAULT 'default.png' AFTER birthdate,
ADD COLUMN updated_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP AFTER created_at;


ALTER TABLE users MODIFY COLUMN phone VARCHAR(20) NOT NULL;
